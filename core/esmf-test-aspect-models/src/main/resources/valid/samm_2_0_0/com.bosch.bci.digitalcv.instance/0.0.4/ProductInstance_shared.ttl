@prefix : <urn:bamm:com.bosch.bci.digitalcv.instance:0.0.4#>.
@prefix type: <urn:bamm:com.bosch.bci.digitalcv.type:0.0.4#>.
@prefix dcv: <urn:bamm:com.bosch.bci.digitalcv:0.0.2#>.
@prefix bamm: <urn:bamm:io.openmanufacturing:meta-model:2.0.0#> .
@prefix bamm-c: <urn:bamm:io.openmanufacturing:characteristic:2.0.0#> .
@prefix bamm-e: <urn:bamm:io.openmanufacturing:entity:2.0.0#> .
@prefix unit: <urn:bamm:io.openmanufacturing:unit:2.0.0#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:ProductInstance a bamm:Entity ;
    bamm:preferredName "Product Instance"@en ;
    bamm:preferredName "Produktinstanz"@de ;
    bamm:description "Instance of a concrete product based on a product type."@en ;
    bamm:properties ( :processedPartId
                      [ bamm:property :serialNumber ; bamm:optional true ]
                      :productionTime
                      :resultState
                      type:materialNumber
                      type:productDescription
                      type:productClass
                      [ bamm:property type:productClassDescription ; bamm:optional true ]
                      [ bamm:property :batchNumber ; bamm:optional true ]
#                     :batchDescription
                      [ bamm:property dcv:twinReference ; bamm:optional true ] ) .