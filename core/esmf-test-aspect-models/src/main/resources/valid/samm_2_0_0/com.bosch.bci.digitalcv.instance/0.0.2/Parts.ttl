@prefix :       <urn:bamm:com.bosch.bci.digitalcv.instance:0.0.2#>.
@prefix bamm:   <urn:bamm:io.openmanufacturing:meta-model:1.0.0#> .
@prefix bamm-c: <urn:bamm:io.openmanufacturing:characteristic:1.0.0#> .
@prefix bamm-e: <urn:bamm:io.openmanufacturing:entity:1.0.0#> .
@prefix unit:   <urn:bamm:io.openmanufacturing:unit:1.0.0#> .
@prefix xsd:    <http://www.w3.org/2001/XMLSchema#> .

:Parts
    a                  bamm:Aspect ;
    bamm:name          "Parts" ;
    bamm:preferredName "Part Bill of Material"@en ;
    bamm:description   "Aspect for bill of material for processed parts."@en ;
    bamm:properties    ( :root :parts ) ;
    bamm:operations    ( ) .

:root
    a                   bamm:Property ;
    bamm:name           "root" ;
    bamm:preferredName  "Root entry reference"@en ;
    bamm:description    "Reference to root part of a list of bill of materials"@en ;
    bamm:characteristic [ a             bamm-c:Either ;
                          bamm:name     "RootEntity" ;
                          bamm-c:left [ a             bamm-c:SingleEntity ;
                                      bamm:name     "RootProcessedPart" ;
                                      bamm:dataType <urn:bamm:com.bosch.bci.digitalcv.instance:0.0.2#ProcessedPart> ] ;
                          bamm-c:right [ a             bamm-c:SingleEntity ;
                                       bamm:name     "RootMaterial" ;
                                       bamm:dataType <urn:bamm:com.bosch.bci.digitalcv.type:0.0.2#Material> ]
                        ] .

:parts
    a                   bamm:Property ;
    bamm:name           "parts" ;
    bamm:preferredName  "Processed Parts"@en ;
    bamm:preferredName  "Teile"@de ;
    bamm:description    "A list of processed parts sorted in chronological order."@en ;
    bamm:description    "Eine Liste mit chronologisch sortierten Teilen."@de ;
    bamm:characteristic [ a             bamm-c:Set ;
                          bamm:name     "ProcessedPart" ;
                          bamm:dataType <urn:bamm:com.bosch.bci.digitalcv.instance:0.0.2#ProcessedPart> ] .
