@prefix :       <urn:bamm:com.bosch.bci.digitalcv.type:0.0.2#>.
@prefix bamm:   <urn:bamm:io.openmanufacturing:meta-model:1.0.0#> .
@prefix bamm-c: <urn:bamm:io.openmanufacturing:characteristic:1.0.0#> .
@prefix bamm-e: <urn:bamm:io.openmanufacturing:entity:1.0.0#> .
@prefix unit:   <urn:bamm:io.openmanufacturing:unit:1.0.0#> .
@prefix xsd:    <http://www.w3.org/2001/XMLSchema#> .

:Materials
    a                  bamm:Aspect ;
    bamm:name          "Materials" ;
    bamm:preferredName "Product Type Bill of Material"@en ;
    bamm:description   "Aspect for bill of material for product instance."@en ;
    bamm:properties    ( [ bamm:property :root; bamm:optional true ] :items ) ;
    bamm:operations    ( ) .

:root
    a                   bamm:Property ;
    bamm:name           "root" ;
    bamm:preferredName  "Root entry reference"@en ;
    bamm:description    "Reference to root part of a list of bill of materials"@en ;
    bamm:characteristic [ a             bamm-c:Either ;
                          bamm:name     "RootEntity" ;
                          bamm-c:left [ a             bamm-c:SingleEntity ;
                                        bamm:name     "RootProductType" ;
                                        bamm:dataType <urn:bamm:com.bosch.bci.digitalcv.type:0.0.3#ProductType> ] ;
                          bamm-c:right [ a             bamm-c:SingleEntity ;
                                         bamm:name     "RootProductInstance" ;
                                         bamm:dataType <urn:bamm:com.bosch.bci.digitalcv.instance:0.0.3#ProductInstance> ]
                        ] .

:items
    a                   bamm:Property ;
    bamm:name           "items" ;
    bamm:preferredName  "Materials"@en ;
    bamm:preferredName  "Materialien"@de ;
    bamm:description    "A list of materials sorted in chronological order."@en ;
    bamm:description    "Eine Liste mit chronologisch sortierten Materialien."@de ;
    bamm:characteristic [ a             bamm-c:Set ;
                          bamm:name     "Material" ;
                          bamm:dataType :Material ] .

