@prefix : <urn:bamm:com.bosch.bci.digitalcv.type:0.0.4#>.
@prefix bamm: <urn:bamm:io.openmanufacturing:meta-model:2.0.0#> .
@prefix bamm-c: <urn:bamm:io.openmanufacturing:characteristic:2.0.0#> .
@prefix bamm-e: <urn:bamm:io.openmanufacturing:entity:2.0.0#> .
@prefix unit: <urn:bamm:io.openmanufacturing:unit:2.0.0#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:Material a bamm:Entity ;
    bamm:preferredName "Material"@en ;
    bamm:preferredName "Material"@de ;
    bamm:description "Definition of a material as type from SAP."@en ;
    bamm:properties ( :materialNumber
                      :parentMaterialNumber
                      :materialDescription
                      #:materialType
                      :materialClass
                      [ bamm:property :materialClassDescription; bamm:optional true ]
                      [ bamm:property :quantity; bamm:optional true ]
                      [ bamm:property :unitOfMeasure; bamm:optional true ]
                      [ bamm:property :isAssembledFrom; bamm:optional true ] ) .

:isAssembledFrom a bamm:Property ;
    bamm:preferredName "Is Assembled From"@en ;
    bamm:description "A list of materials this material is assembled from."@en ;
    bamm:characteristic [
        a bamm-c:SortedSet ;
        bamm-c:elementCharacteristic :MaterialNumber
    ] .

:materialClass a bamm:Property ;
    bamm:preferredName "Material Class"@en ;
    bamm:preferredName "Materialklasse"@de ;
    bamm:description "The classification of material."@en ;
    bamm:characteristic [
        a bamm-c:Code ;
        bamm:preferredName "Material Class"@en ;
        bamm:dataType xsd:string
    ] .

:materialNumber a bamm:Property ;
    bamm:preferredName "Material Number"@en ;
    bamm:preferredName "Materialnummer"@de ;
    bamm:description "The identification of the product based on the SAP material number."@en ;
    bamm:exampleValue "F03Z12345602" ;
    bamm:characteristic :MaterialNumber .

:parentMaterialNumber a bamm:Property ;
    bamm:preferredName "Parent Material Number"@en ;
    bamm:preferredName "Ãœbergeordnetematerialnummer"@de ;
    bamm:description "The identification of the parent material in the SAP BoM."@en ;
    bamm:exampleValue "F03Z20009V" ;
    bamm:characteristic :MaterialNumber .

:MaterialNumber a bamm-c:Trait ;
    bamm-c:baseCharacteristic [
        a bamm-c:Code ;
        bamm:dataType xsd:string
    ] ;
    bamm-c:constraint [
        a bamm-c:RegularExpressionConstraint ;
        bamm:value "[A-Z0-9]{9,13}"
    ] .

:materialDescription a bamm:Property ;
    bamm:preferredName "Material Description"@en ;
    bamm:preferredName "Materialbeschreibung"@de ;
    bamm:description "Description of the product ."@en ;
    bamm:characteristic bamm-c:MultiLanguageText .

:materialType a bamm:Property ;
    bamm:preferredName "Material Type"@en ;
    bamm:preferredName "Materialnummer"@de ;
    bamm:description "The identification of the product based on the SAP material number."@en ;
    bamm:characteristic [
        a bamm-c:SingleEntity ;
        bamm:dataType :MaterialType
    ] .

:MaterialType a bamm:Entity ;
    bamm:preferredName "Material Type"@en ;
    bamm:description "Type of material from SAP"@en ;
    bamm:properties ( :materialTypeCode :materialTypeDescription ) .

:materialTypeCode a bamm:Property ;
    bamm:preferredName "Material Type Code"@en ;
    bamm:preferredName "Materialtyp"@de ;
    bamm:description "The identification of the material type from SAP."@en ;
    bamm:exampleValue "HALB" ;
    bamm:characteristic :MaterialTypeCode .

:MaterialTypeCode a bamm-c:Trait ;
    bamm-c:baseCharacteristic [
        a bamm-c:Code ;
        bamm:preferredName "Material Type Code"@en ;
        bamm:dataType xsd:string
    ] ;
    bamm-c:constraint [
        a bamm-c:RegularExpressionConstraint ;
        bamm:value "[A-Z0-9]{4}"
    ] .

:materialTypeDescription a bamm:Property ;
    bamm:preferredName "Material Type Description"@en ;
    bamm:preferredName "Materialtypenbeschreibung"@de ;
    bamm:description "Description of the material type."@en ;
    bamm:characteristic bamm-c:MultiLanguageText .

:materialClassDescription a bamm:Property ;
    bamm:preferredName "Material Class Description"@en ;
    bamm:preferredName "Materialklassenbeschreibung"@de ;
    bamm:description "Description of the material or product type class."@en ;
    bamm:characteristic bamm-c:Text .

:unitOfMeasure a bamm:Property ;
    bamm:preferredName "Unit of Measure"@en ;
    bamm:description "Unit of measure of this parameter"@en ;
    bamm:characteristic bamm-c:UnitReference .

:quantity a bamm:Property ;
    bamm:preferredName "Quantity"@en ;
    bamm:description "Quantity of materials in material"@en ;
    bamm:characteristic :Quantity .

:Quantity a bamm-c:Quantifiable ;
    bamm:dataType xsd:float ;
    bamm-c:unit unit:piece .