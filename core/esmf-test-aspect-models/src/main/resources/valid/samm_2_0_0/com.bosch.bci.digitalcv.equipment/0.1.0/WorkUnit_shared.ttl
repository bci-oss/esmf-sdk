@prefix : <urn:samm:com.bosch.bci.digitalcv.equipment:0.1.0#> .
@prefix samm: <urn:samm:org.eclipse.esmf.samm:meta-model:2.0.0#> .
@prefix samm-c: <urn:samm:org.eclipse.esmf.samm:characteristic:2.0.0#> .
@prefix samm-e: <urn:samm:org.eclipse.esmf.samm:entity:2.0.0#> .
@prefix unit: <urn:samm:org.eclipse.esmf.samm:unit:2.0.0#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcv: <urn:samm:com.bosch.bci.digitalcv:0.1.0#> .

:WorkUnit a samm:AbstractEntity ;
    samm:extends :ParentEquipment ;
    samm:description "Definition of an equipment which is always placed in a line and hence has a parent equipment."@en ;
    samm:properties ( :parentEquipment
                      #work around for the fact that the line number within a plant is not unique and the line name is required for identification
                      [ samm:property :workCenterName ; samm:optional true ]) .

:Station a samm:Entity ;
    samm:extends :WorkUnit ;
    samm:preferredName "Station"@en ;
    samm:preferredName "Station"@de ;
    samm:description "Definition of a production station."@en ;
    samm:properties (  ) .

:workCenterName a samm:Property ;
    samm:preferredName "Work Center Name"@en ;
    samm:description "The name of the work center where the work unit is related to."@en ;
    samm:characteristic :WorkCenterName .